<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="312dp"
        tools:context=".MapsActivity" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="431dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-light"
            android:text="Absensi"
            android:textAlignment="center"
            android:textColor="#B663FF"
            android:textSize="36sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/namaT"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_absen"
            android:drawableLeft="@drawable/nama_icon"
            android:drawableTint="@color/purple_200"
            android:drawablePadding="8dp"
            android:hint="Nama Lengkap"
            android:editable="false"
            android:padding="8dp" />

        <EditText
            android:id="@+id/kelasT"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_absen"
            android:drawableLeft="@drawable/kelas_icon"
            android:drawableTint="@color/purple_200"
            android:drawablePadding="8dp"
            android:hint="Kelas"
            android:editable="false"
            android:padding="8dp" />

        <EditText
            android:id="@+id/absenT"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_absen"
            android:drawableLeft="@drawable/absen_icon"
            android:drawablePadding="8dp"
            android:drawableTint="@color/purple_200"
            android:hint="No Absen"
            android:editable="false"
            android:padding="8dp" />

        <Button
            android:id="@+id/absen"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/absen_background_color"
            android:drawableRight="@drawable/play_icon"
            android:text="Absen"
            android:textColor="@color/button_text_color"
            android:textSize="18sp"
            app:cornerRadius="20dp" />

        <TextView
            android:id="@+id/Lokasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:textColor="@color/black" />

    </LinearLayout>
</RelativeLayout>